{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && go build -o bin/api ./cmd/api",
    "watchPatterns": ["backend"]
  },
  "deploy": {
    "startCommand": "backend/bin/api",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
